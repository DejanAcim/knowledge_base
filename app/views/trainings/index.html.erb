<h1>Trainings</h1>

<% if logged_in? %>
	<%= link_to "Add new training", new_training_path, class: "btn btn-success" %>
<% end %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Training Plans</th>
		</tr>
	</thead>
	<tbody>
		<% @trainings.each do |training| %>
			<tr>
				<td><%= training.name %></td>
				<td>
					<%= link_to "Show", training_path(training), class: "btn btn-default btn-info btn-xs" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
