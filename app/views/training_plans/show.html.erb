<%= render 'shared/page_title', title: @training_plan.name %>

<div class="row">
  <div class="col-md-4 pull-right center">
    <%= gravatar_for @training_plan.user, size: 200 %>
    <p>
      <h5>Currently used by: <%= @training_plan.user.full_name %></h5>
    </p>
  </div>
  <div class="col-md-8">
    <%= link_to "Edit", edit_training_plan_path(@training_plan), class: "btn btn-success pull-right" %>
    <div class="well">
      <p>
        <strong>Description:</strong>
      </p>
      <%= simple_format(@training_plan.description) %>
    </div>
  </div>
</div>

<h5><%= link_to "Return to Listing", training_plans_path, class: "btn btn-warning btn-small" %></h5>
