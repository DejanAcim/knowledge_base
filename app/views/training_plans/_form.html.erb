<%= render 'shared/errors', obj: @training_plan %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @training_plan do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: 8 %>

      <strong>Skills:</strong>
      <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
      <br><br>
      <strong>Trainings:</strong>
      <%= f.collection_check_boxes :training_ids, Training.all, :id, :name do |cbtr| %>
        <% cbtr.label(class: "checkbox-inline") {cbtr.check_box(class: "checkbox") + cbtr.text} %>
      <% end %>
      <br><br>
      <%= f.submit(@training_plan.new_record? ? 'Create Training Plan' : 'Edit Training Plan',
                   class: "btn btn-success") %>
    <% end %>
  </div>
</div>
