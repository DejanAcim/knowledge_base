<%= render 'shared/page_title', title: "Create a new Skill" %>

<%= render 'shared/errors', obj: @skill %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @skill do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create a Skill", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
