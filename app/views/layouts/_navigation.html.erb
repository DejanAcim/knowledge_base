<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "myTrainingPlans", root_path, class: "btn btn-lg btn-success", id: "logo" %>
    <div class="nav-item">
      <%= link_to "link_1", "", class: "btn btn-warning btn-default" %>
    </div>
    <div class="nav-item">
      <%= link_to "link_2", "", class: "btn btn-warning btn-default" %>
    </div>
    <% if logged_in? %>
      <div class="nav-item">
        <%= link_to "New Training Plan", new_training_plan_path, class: "btn btn-warning btn-default" %>
      </div>
      <ul class="nav-item">
        <li class="dropdown">
          <%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.full_name %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", user_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <div class="nav-item">
        <%= link_to "Log in", login_path, class: "btn btn-default btn-success" %>
      </div>
    <% end %>
  </div>
</header>
