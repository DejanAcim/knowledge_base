<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "myTrainingPlans", root_path, class: "btn btn-lg btn-success", id: "logo" %>
    <ul class="nav_ul_item">
      <li class="dropdown">
        <%= link_to '#', class: "btn btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
          Skills <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <% Skill.all.each do |skill| %>
            <li><%= link_to skill.name, skill_path(skill) %></li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
            <li>
              <%= link_to "New Skill", new_skill_path %>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>
    <ul class="nav_ul_item">
      <li class="dropdown">
        <%= link_to '#', class: "btn btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
          Trainings <b class="caret"></b>
        <% end %>
        <ul class="dropdown-menu">
          <% Training.all.each do |training| %>
            <li><%= link_to training.name, training_path(training) %></li>
          <% end %>
          <% if logged_in? %>
            <li class="divider"></li>
            <li>
              <%= link_to "New Training", new_training_path %>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>
    <% if logged_in? %>
      <div class="nav_item">
        <%= link_to "New Training Plan", new_training_plan_path, class: "btn btn-primary btn-default" %>
      </div>
      <ul class="nav_item">
        <li class="dropdown">
          <%= link_to '#', class: "btn btn-default dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.full_name %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", user_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <div class="nav_item">
        <%= link_to "Log in", login_path, class: "btn btn-default btn-primary" %>
      </div>
    <% end %>
  </div>
</header>
